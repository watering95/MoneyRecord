<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@color/colorWhiteGreen" card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp" card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/text_yearmonth_card_book_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="yearmonth"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_income_card_book_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="income"
                    card_view:layout_constraintBottom_toBottomOf="@+id/text_yearmonth_card_book_statistics"
                    card_view:layout_constraintStart_toEndOf="@+id/text_yearmonth_card_book_statistics"
                    card_view:layout_constraintTop_toTopOf="@+id/text_yearmonth_card_book_statistics" />

            <TextView
                    android:id="@+id/text_spend_card_book_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="spend"
                    card_view:layout_constraintBottom_toBottomOf="@+id/text_income_card_book_statistics"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/text_income_card_book_statistics"
                    card_view:layout_constraintTop_toTopOf="@+id/text_income_card_book_statistics" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="date" type="String"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/fragment_book_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/button_backward_fragment_book_income"
                         android:background="@drawable/baseline_keyboard_arrow_left_black_18dp"
                         app:layout_constraintStart_toStartOf="parent"
                         android:layout_marginStart="8dp"
                         app:layout_constraintTop_toTopOf="@+id/text_date_fragment_book_income"
                         app:layout_constraintBottom_toBottomOf="@+id/text_date_fragment_book_income"
                         style="@style/Widget.AppCompat.ImageButton" android:contentDescription="@string/forward"/>
            <TextView android:layout_width="80dp" android:layout_height="wrap_content"
                      android:id="@+id/text_date_fragment_book_income"
                      app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                      app:layout_constraintStart_toEndOf="@+id/button_backward_fragment_book_income"
                      android:text="@{date}"
                      android:layout_marginStart="8dp"/>
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/button_forward_fragment_book_income"
                         android:background="@drawable/baseline_keyboard_arrow_right_black_18dp"
                         app:layout_constraintTop_toTopOf="@+id/text_date_fragment_book_income"
                         app:layout_constraintStart_toEndOf="@+id/button_calendar_fragment_book_income"
                         android:layout_marginStart="8dp"
                         app:layout_constraintBottom_toBottomOf="@+id/text_date_fragment_book_income"
                         style="@style/Widget.AppCompat.ImageButton" android:contentDescription="@string/forward"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:background="@drawable/baseline_date_range_black_18dp"
                    android:id="@+id/button_calendar_fragment_book_income"
                    app:layout_constraintTop_toTopOf="@+id/text_date_fragment_book_income"
                    app:layout_constraintBottom_toBottomOf="@+id/text_date_fragment_book_income"
                    app:layout_constraintStart_toEndOf="@+id/text_date_fragment_book_income"
                    android:layout_marginStart="8dp" style="@style/Widget.AppCompat.ImageButton"
                    android:contentDescription="@string/date"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_fragment_book_income"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_date_fragment_book_income">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_fragment_book_income"
                android:src="@drawable/baseline_add_black_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
